`timescale 1ns / 1ps


module decoder(a,y);
    input [2:0] y;
    output reg [7:0] a;


    always @(y) begin
        case (y)
            3'h0:a<=8'h01;
            3'h1:a<=8'h02;
            3'h2:a<=8'h04;
            3'h3:a<=8'h08;
            3'h4:a<=8'h10;
            3'h5:a<=8'h20;
            3'h6:a<=8'h40;
            3'h7:a<=8'h80;
            default:a<=8'h00;
        endcase
    end

endmodule
